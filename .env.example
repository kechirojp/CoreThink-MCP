# CoreThink-MCP Environment Variables

# Repository root path
CORETHINK_REPO_ROOT=.

# Server port (auto-detect if occupied)
CORETHINK_PORT=8080

# Log level
CORETHINK_LOG_LEVEL=INFO

# Sandbox directory name
CORETHINK_SANDBOX_DIR=.sandbox
CORETHINK_BACKUP_ENABLED=true

# MCP設定
CORETHINK_MCP_NAME=corethink-mcp
CORETHINK_MCP_VERSION=0.1.0

# 開発用設定（本番では削除）
CORETHINK_DEBUG=false
CORETHINK_DRY_RUN_DEFAULT=true
